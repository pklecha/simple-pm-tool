{% trans_default_domain 'FOSUserBundle' %}

<div class="container main-content">
    <div class="row">
        <div class="col-md-3 page-center">
            <h1>Login</h1>
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <div class="form-group">
                    <label for="username">Username or email</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Enter username or email" class="form-control">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Enter password">
                </div>
                <div class="checkbox">
                    <label for="remember_me">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />Remember me
                    </label>
                </div>
                <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>
